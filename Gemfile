source 'https://rubygems.org'


# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.1.1'
# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.3'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'
# See https://github.com/sstephenson/execjs#readme for more supported runtimes
gem 'therubyracer',  platforms: :ruby

# I18n for default messages
gem 'rails-i18n'

# Web server
gem 'puma'
gem 'foreman', '~> 0.66.0'

# Background jobs
gem 'sidekiq'

# Boostrap
gem 'bootstrap-sass', git: 'https://github.com/thomas-mcdonald/bootstrap-sass.git'

# jQuery with rails addons
gem 'jquery-rails'
gem 'jquery-ui-rails'

# Act as list
gem 'acts_as_list'

# Encryption
gem 'bcrypt-ruby', '~> 3.0.0'

# Postgres + Postgres full-text search
gem 'pg', '~> 0.14.1'
gem 'pg_search', git: 'https://github.com/Casecommons/pg_search.git'

# Nil for blank?
gem 'nilify_blanks'

# Serializer (json)
gem 'active_model_serializers'

# Form
gem 'simple_form', git: 'https://github.com/plataformatec/simple_form.git'

# Turbolinks
gem 'turbolinks'

# Faster assets precompile
gem 'turbo-sprockets-rails3'

# Schema comment on each model
gem 'annotate'

# Use HAML for templating
gem 'haml-rails'

group :development do
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'meta_request'
end
