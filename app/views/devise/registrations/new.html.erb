<%= render "shared/header", title: t("devise.registrations.new.title"), intro: nil %>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-sm-6">
      <%= f.input :first_name, placeholder: true, label: false, autofocus: true %>
    </div>
    <div class="col-sm-6">
      <%= f.input :last_name, placeholder: true, label: false %>
    </div>
  </div>
  <%= f.input :email, placeholder: true, label: false %>
  <%= f.input :password, placeholder: true, label: false %>
  <%= f.input :password_confirmation, placeholder: true, label: false %>

  <div>
    <%= f.button :button, t("devise.registrations.new.submit"), class: "btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
