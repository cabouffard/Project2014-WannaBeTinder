$(function() {
  publisher = faye.publish('/messages/<%= @conversation.id %>', {
    message: '<%= escape_javascript(render("messages/message", message: @message)) %>',
    conversation: '<%= @conversation.id %>'
  });

  publisher.callback(function() {
    $('#message_body').val('');
    $('#new_message').find(".btn[type='submit']").prop('disabled', false)
  });
});
