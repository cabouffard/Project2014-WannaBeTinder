%nav.navbar.navbar-default.navbar-static-top.navbar-shrink{role: "navigation"}
  .container
    .navbar-header.page-scroll
      %a.navbar-brand{href: root_path}= "WannabeTinder"
      - if user_signed_in?
        %button.navbar-toggle{data: { target: ".navbar-collapse", toggle: "collapse" }, type: "button" }
          %span.sr-only Navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar     
        .collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            %li.dropdown
              %a.dropdown-toggle{data: { toggle: "dropdown" }, href: "#", aria: { expanded: "false" } }
                %span.app-nav-user
                  = current_user.name
              %ul.dropdown-menu
                %li
                  = link_to t("navbar.user.account_settings"), edit_user_registration_path
                %li.divider
                %li
                  = link_to t("navbar.user.sign_out"), destroy_user_session_path, method: :delete