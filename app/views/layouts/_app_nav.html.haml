%nav.navbar.navbar-default{role: "navigation"}
  .navbar-header
    %button.navbar-toggle{data: { target: ".navbar-collapse", toggle: "collapse" }, type: "button"}
      %span.sr-only Navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand.navbar-brand-logo{:href => root_path}= image_tag 'logo-dark.png', alt: 'Wannaba Tinder', width: 250
  .collapse.navbar-collapse
    - if !user_signed_in?
      %ul.nav.navbar-nav.navbar-right
        %li
          %a{href: new_session_path(User)}= t("navbar.user.sign_in")
    - else
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          %a.dropdown-toggle{data: { toggle: "dropdown" }, href: "#"}
            %span.app-nav-user
              = current_user.name
            %b.caret
          %ul.dropdown-menu
            %li
              = link_to t("navbar.user.account_settings"), edit_user_registration_path
            %li.divider
            %li
              = link_to t("navbar.user.sign_out"), destroy_user_session_path, method: :delete
